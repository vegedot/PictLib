{
  "name": "pictlib",
  "version": "0.0.0",
  "description": "Picture viewing desktop application for download and search",
  "main": "out/main/main.js",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:electron": "electron .",
    "dev:main": "tsc -w -p src/main",
    "clean": "rimraf dist out src/renderer/.next",
    "postinstall": "electron-builder install-app-deps",
    "build": "run-s build:renderer build:main",
    "build:main": "tsc -p src/main",
    "build:renderer": "next build src/renderer && next export src/renderer -o out/renderer",
    "package": "npm run build && electron-builder --dir",
    "unpackage": "npm run build && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vegedot/PictLib.git"
  },
  "author": "vegedot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vegedot/PictLib/issues"
  },
  "homepage": "https://github.com/vegedot/PictLib#readme",
  "dependencies": {
    "@leafac/sqlite": "^1.5.0",
    "@reduxjs/toolkit": "^1.6.1",
    "destyle.css": "^3.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-store": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "redux": "^4.1.1"
  },
  "devDependencies": {
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.18",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "electron": "^13.1.9",
    "electron-builder": "^22.11.7",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-search-devtools": "^1.3.3",
    "next": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.39.0",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5"
  },
  "optionalDependencies": {
    "@next/eslint-plugin-next": "^11.1.0",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.3.2"
  },
  "build": {
    "asar": true,
    "files": [
      "out/main",
      "out/renderer"
    ]
  }
}
